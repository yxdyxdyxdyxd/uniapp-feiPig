.address {
  position: relative;
}
.address .address-img {
  width: 100%;
  height: 400rpx;
}
.address .address-img image {
  width: 750rpx !important;
  height: 400rpx;
}
.address .address-info {
  position: absolute;
  left: 50rpx;
  top: 100rpx;
  z-index: 999;
}
.address .address-text {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.address .address-text image {
  width: 33rpx;
  height: 33rpx;
  padding-left: 30rpx;
}
.address .words {
  font-size: 35rpx;
  color: #ffffff;
  font-weight: bold;
}
.address .words-eng {
  font-size: 30rpx;
  color: #ffffff;
}
.address .black {
  background: rgba(0, 51, 0, 0.3);
  position: absolute;
  top: 0;
  left: 0;
  height: 400rpx;
  width: 100%;
}
.address .plane {
  margin: 40rpx 20rpx;
  height: 150rpx;
}
.address .plane image {
  width: 100%;
  border-radius: 20rpx;
  height: 150rpx;
}

